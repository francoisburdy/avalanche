        <splash density="port-hdpi" src="res/splash/splash-avalanche_hdpi.png" />
        <splash density="port-xhdpi" src="res/splash/splash-avalanche_hdpi.png" />
        <splash density="port-xxhdpi" src="res/splash/splash-avalanche_hdpi.png" />
        <splash density="port-xxxhdpi" src="res/splash/splash-avalanche_hdpi.png" />
    </platform>

