<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.miage.avalanche" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Avalanche</name>
    <description>
        Application de gestion du personnel d'intervention et d'organisation des secours d'avalanche
    </description>
    <author email="francois.burdy@gmail.com" href="https://francoisburdy.com/enculé">
        François BURDY
    </author>
    <content src="index.html" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="FadeSplashScreenDuration" value="200" />
    <platform name="android">
        <icon density="mdpi" src="res/icone/logo-avalanche_mdpi.png" />
        <icon density="hdpi" src="res/icone/logo-avalanche_hdpi.png" />
        <icon density="xhdpi" src="res/icone/logo-avalanche_xhdpi.png" />
        <icon density="xxhdpi" src="res/icone/logo-avalanche_xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icone/logo-avalanche_xxxhdpi.png" />
        <splash density="port-mdpi" src="res/splash/splash-avalanche_mdpi.png" />
        <splash density="port-hdpi" src="res/splash/splash-avalanche_hdpi.png" />
        <splash density="port-xhdpi" src="res/splash/splash-avalanche_hdpi.png" />
        <splash density="port-xxhdpi" src="res/splash/splash-avalanche_hdpi.png" />
        <splash density="port-xxxhdpi" src="res/splash/splash-avalanche_hdpi.png" />
    </platform>
    <platform name="browser">
        <preference name="SplashScreen" value="/img/login-background.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-camera" spec="~2.3.0">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" " />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <engine name="android" spec="~5.2.2" />
    <engine name="ios" spec="~4.2.1" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
    <plugin name="ionic-plugin-keyboard" spec="~2.2.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
</widget>
