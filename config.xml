<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.miage.avalanche" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Avalanche</name>
    <description>
        Application de gestion du personnel d'intervention et d'organisation des secours d'avalanche
    </description>
    <author email="francois.burdy@gmail.com" href="https://francoisburdy.com/">
        Fran√ßois BURDY
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-camera" spec="~2.3.0">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" " />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <engine name="android" spec="~5.2.2" />
    <engine name="ios" spec="~4.2.1" />
</widget>
